{
  "name": "shortify",
  "version": "1.0.0",
  "description": "Link shortifier",
  "main": "app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:be\" \"npm run dev:fe\"",
    "dev:be": "nodemon app.ts",
    "dev:fe": "npm run start --prefix ../frontend",
    "build:fe": "npm run build --prefix ../frontend",
    "start": "cross-env NODE_ENV=production node -r esm -r ts-node/register app.ts",
    "start:lo": "cross-env NODE_ENV=localProduction node -r esm -r ts-node/register app.ts",
    "deploy": "gcloud app deploy app.yaml --version prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmeshavkin/shortify.git"
  },
  "author": "Meshavkin Konstantin <meshavkin1996@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kmeshavkin/shortify/issues"
  },
  "homepage": "https://github.com/kmeshavkin/shortify#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "connect-mongo": "^3.2.0",
    "cross-env": "^7.0.2",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "fakelish": "^0.3.0",
    "googleapis": "^59.0.0",
    "mongoose": "^5.10.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.4"
  }
}
